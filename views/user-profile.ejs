            border: none;
            width: 700px;
            height: 400px;
        }

        .m-r-0 {
            margin-right: 0px;
        }

        .m-l-0 {
            margin-left: 0px;
        }

        .user-card-full .user-profile {
            border-radius: 5px 0 0 5px;
        }

        .bg-c-lite-green {
            /* background: -webkit-gradient(linear, left top, right top, from(#f29263), to(#ee5a6f)); */
            background: linear-gradient(to right, rgb(30, 30, 132), #2b1653);
            height: 900px;
        }

        .user-profile {
            padding: 20px 0;
        }

        .card-block {
            padding: 1.25rem;
        }

        .m-b-25 {
            margin-bottom: 25px;
        }

        .img-radius {
            border-radius: 5px;
            height: 120px;
            margin-left: -13px;
        }

        h6 {
            margin-top: 13px;
            font-size: 23px;
        }

        .card .card-block p {
            line-height: 25px;
        }

        @media only screen and (min-width: 1400px) {
            p {
                font-size: 14px;
            }
        }

        .card-block {
            padding: 1.25rem;
            font-size: large;
        }

        .b-b-default {
            border-bottom: 1px solid #e0e0e0;
        }

        .m-b-20 {
            margin-bottom: 20px;
            font-size: 23px;
        }

        .p-b-5 {
            padding-bottom: 5px !important;
        }

        .card .card-block p {
            line-height: 23px;
        }

        .m-b-10 {
            margin-bottom: 10px;
        }

        .text-muted {
            color: #828e9a !important;
            font-size: 15px;
        }

        .b-b-default {
            border-bottom: 1px solid #e0e0e0;
        }

        .f-w-600 {
            font-weight: 700;
        }

        .m-b-20 {
            margin-bottom: 20px;
        }

        .m-t-40 {
            margin-top: 20px;
        }

        .p-b-5 {
            padding-bottom: 5px !important;
        }

        .m-b-10 {
            margin-bottom: 10px;
        }

        .m-t-40 {
            margin-top: 20px;
        }

        .user-card-full .social-link li {
            display: inline-block;
        }

        .user-card-full .social-link li a {
            font-size: 20px;
            margin: 0 10px 0 0;
            -webkit-transition: all 0.3s ease-in-out;
            transition: all 0.3s ease-in-out;
        }

        .row m-l-0 m-r-0 {
            width: 450px;
        }

        .navbar {
            width: 100%;
            background-color: #22196b;
            height: 80px;
            margin-top: 8px;
        }


        .navbar a {
            float: left;
            text-align: center;
            padding: 20px;
            color: white;
            text-decoration: none;
            font-size: 23px;
            margin-top: -5px;
            font-family: Montserrat bold;

        }

        .navbar img {
            margin-top: 4px;
            margin-right: 12px;
            float: left;
            height: 60px;
            width: 140px;
        }

        .nav-item a:hover {
            background-color: red;
        }

        #Profile {
            float: right;
            margin-right: 23px;
        }

        #Profile button {
            background-color: rgb(30, 30, 132);
            color: white;
            font-size: 18px;
            padding: 6px;
            border: 2px solid #e0e0e0;
        }
