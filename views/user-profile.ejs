</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <img src="techAsia-LOGO_horizontal1028.png">
                &nbsp ;
                &nbsp ;
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#"><i
                                class="fa fa-fw fa-user"></i>Profile</a>
                    </li>
                    &nbsp &nbsp &nbsp ;
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:3000/dashboard"><i
                                class="fa fa-fw fa-calculator"></i>Activity</a>
                                &nbsp &nbsp &nbsp ;
                                <li class="nav-item">
                                    <a class="nav-link" href="http://localhost:3000/mydevices"><i
                                            class="fa fa-fw fa-calculator"></i>My Devices</a>
                    </li>
                    &nbsp &nbsp &nbsp ;
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:3000/graph"><i
                                class="fa fa-fw fa-pie-chart"></i>Graph</a>
                    </li>

                    /li>
                    &nbsp &nbsp &nbsp ;
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:3000/user-changeDetails"><i
                                class="fa fa-fw fa-pie-chart"></i>Change</a>
                    </li>
                </ul>
            </div>
            <form id="Profile" action="/logout" method="GET" enctype="text/plain">
                <button>Logout</button>
            </form>
        </div>
    </nav>

    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25">
                                        <img src="logo2.jpg" class="img-radius" alt="User-Profile-Image">
                                    </div>
                                    <h6 class="f-w-600">TechAsia Mechatronics</h6>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Your Details</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <% users.forEach(function(user) { %>
                                                <p class="m-b-10 f-w-600">Name</p>
                                                <h6 class="text-muted f-w-400">
                                                    <%= user.name %>
                                                </h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Phone</p>
                                            <h6 class="text-muted f-w-400">
                                                <%= user.phone %>
                                            </h6>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">E-mail</p>
                                            <h6 class="text-muted f-w-400">
                                                <%= user.email %>
                                            </h6>
                                        </div>
                                        <% }); %>

                                    </div>
                                    <ul class="social-link list-unstyled m-t-40 m-b-10">
                                        <li><a href="https://www.facebook.com/techAsiaMechatronics/" target="blank"
                                                data-toggle="tooltip" data-placement="bottom" title=""
                                                data-original-title="facebook" data-abc="true"><i
                                                    class="mdi mdi-facebook feather icon-facebook "
                                                    aria-hidden="true"></i></a></li>
                                        <li><a onclick="sendMail()" data-toggle="tooltip" target="blank"
                                                data-placement="bottom" title="" data-original-title="email"
                                                data-abc="true"><i class="mdi mdi-email feather icon-email "
                                                    aria-hidden="true"></i></a></li>
                                        <li><a href="https://techasiamechatronics.com/" data-toggle="tooltip"
                                                target="blank" data-placement="bottom" title=""
                                                data-original-title="mdi-internet-explorer" data-abc="true"><i
                                                    class="mdi mdi-internet-explorer feather icon-internet explorer "
                                                    aria-hidden="true"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
