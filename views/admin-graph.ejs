<!DOCTYPE html>
<html>

<head>
  <title>Admin-Graph</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@200&display=swap');
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }

    nav {
      display: flex;
      height: 80px;
      width: 100%;
      background-color: #22196b;
      align-items: center;
      justify-content: space-between;
      padding: 0 50px 0 100px;
      flex-wrap: wrap;
    }

    nav .logo {
      margin-left: -50px;
      /* height: 60px;
      width: 140px; */
    }

    nav ul {
      display: flex;
      flex-wrap: wrap;
      list-style: none;
    }

    nav ul li {
      margin: 0 5px;
    }

    nav ul li a {
      color: white;
      text-decoration: none;
      font-size: 20px;
      padding: 20px;
      transition: all 0.3s ease;
      display: block;
    }

    nav ul li a.active,
    nav ul li a:hover {
      color: white;
      background: red;
    }

    nav .menu-btn i {
      color: #fff;
      font-size: 20px;
      cursor: pointer;
      display: none;
    }

    input[type="checkbox"] {
      display: none;
    }

    @media (max-width: 1000px) {
      nav {
        padding: 0 40px 0 50px;
      }
    }

    @media (max-width: 920px) {
      nav .menu-btn i {
        display: block;
      }

      #click:checked~.menu-btn i:before {
        content: "\f00d";
      }

      nav ul {
        position: fixed;
        top: 80px;
        left: -100%;
        background: #22196b;
        height: 53%;
        width: 100%;
        text-align: center;
        display: block;
        transition: all 0.3s ease;
        z-index: 1;
      }

      #click:checked~ul {
        left: 0;
      }

      nav ul li {
        width: 100%;
        margin: 20px 0;
      }

      nav ul li a {
        width: 100%;
        margin-left: -100%;
        display: block;
        font-size: 20px;
        padding: 20px;
      }

      #click:checked~ul li a {
        margin-left: 0px;
      }

      nav ul li a.active,
      nav ul li a:hover {
        background: none;
        color: red;
      }
    }

    .dropdown2 {
      float: right;
      font-size: 20px;
    }


    .dropdown2 .dropbtn2 {
      font-size: 20px;
      border: none;
      outline: none;
      color: white;
      padding: 20px;
      background-color: inherit;
      font-family: 'Inter', sans-serif;
      display: block;
    }

    .dropdown2:hover {
      background-color: red;
    }

    .dropbtn2 {
      background-color: none;
      color: red;
    }

    .dropdown-content2 {
      display: none;
      position: absolute;
      background-color: #f9f9f9;
      box-shadow: 0px 8px 12px 0px rgba(0, 0, 0, 0.2);
      z-index: 1;
      min-width: 146px;
      border: solid 1px;
    }

    .dropdown-content2 a {
      float: none;
      color: black;
      text-decoration: none;
      display: block;
      text-align: center;
      font-size: 20px;
      padding: 12px 12px;
    }


    .dropdown-content2 a:hover {
      background-color: #ddd;
      padding: 12px 12px;
    }

    .dropdown2:hover .dropdown-content2 {
      display: block;
    }
    .upper {
      background-color: rgb(232, 238, 240);
      border-radius: 10px;
      box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25),
        0 10px 10px rgba(0, 0, 0, 0.22);
      position: relative;
      margin-top: 12px;
      overflow: hidden;
      min-height: 120px;
      max-height: 120px;
      padding: 10px;
    }

    .lower {
      background-color: rgb(232, 238, 240);
      border-radius: 10px;
      box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25),
        0 10px 10px rgba(0, 0, 0, 0.22);
      position: relative;
      overflow: auto;
      margin: 20px 20px 20px 30px;
      min-height: 210px;
      padding: 10px;
      width: 420px;
    }
    .row {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;

    }

    .upper h2 {
      text-align: center;
      color: black;
      margin-top: 10px;
      font-size: 20px;
    }

    #searchDateButton {
      padding: 7px;
      border: 2px solid #22196b;
      margin-top: 3px;
      font-size: 15px;
      background-color: #22196b;
      color: white;
      cursor: pointer;
    }

    #searchDate {
      border: 1.5px solid #22196b;
      padding: 7.8px;
      margin-top: 4px;
      align-items: center;
      font-size: 13px;
			font-family: 'Inter', sans-serif;
    }

    #logout {
       font-size: 15px;
      background-color: #22196b;
      color: white;
      cursor: pointer;
      margin-left: -30px;
    }
  </style>


</head>

<body>
  <nav>
    <img src="finalLogo.png" class="logo">
    <input type="checkbox" id="click">
    <label for="click" class="menu-btn">
      <i class="fa fa-fw fa-bars"></i>
    </label>
    <ul>
      <li><a href="http://localhost:3000/admin-dashboard"><i class="fa fa-fw fa-search"></i> Users Data</a></li>
      <li><a href="http://localhost:3000/admin-activity"><i class="fa fa-fw fa-calculator"></i> Activity</a></li>
      <li><a href="http://localhost:3000/register"><i class="fa fa-fw fa-users"></i> Add User</a></li>
    </ul>
    <div class="dropdown2">
      <button class="dropbtn2" id="activity2"><i class="fa fa-fw fa-user"></i> Admin
        <i class="fa fa-caret-down"></i>
      </button>
      <div class="dropdown-content2">
        <a href="http://localhost:3000/admin-profile">Profile</a>
        <a href="http://localhost:3000/admin-registration">New Admin</a>
        <a href="#">
          <form id="Profile" action="/logout" method="GET" enctype="text/plain">
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button id="logout">Logout</button>
          </form>
        </a>
  </nav>

  <div class="container">
    <div class="upper" align="center">
      <h2>Search According To Date</h2>
      <!-- <div class="input-group"> -->
      <form action="/admin-viewGraph" method="POST">
        <input type="date" id="searchDate" placeholder="Date" />
        <button type="submit" class="btn btn-primary" id="searchDateButton">
          <i class="fa fa-fw fa-search"></i>
        </button>
      </form>
      <!-- </div> -->
    </div>
    <div class="row" >
      <% users.forEach(function(mac) { %>
        <div class="lower" align="center" >
          <canvas id="<%= mac.mac_id %>-chart" style="width: 50%; height: 50%;"
            data-chart-data='<%- JSON.stringify(data[users.indexOf(mac)]) %>'></canvas>
        </div>
        <% }); %>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var charts = document.querySelectorAll('canvas');
      charts.forEach(function (chart) {
        const chartData = JSON.parse(chart.getAttribute('data-chart-data'));
        const macId = chart.id.split('-')[0];
        var xValues = chartData.map(entry => entry.time);
        var yValues = chartData.map(entry => entry.on_off);

        new Chart(chart, {
          type: 'line',
          data: {
            labels: xValues,
            datasets: [{
              label: macId,
              data: yValues,
              backgroundColor: 'rgb(30, 30, 132)',
              borderColor: 'rgba(75, 192, 192, 1)',
              borderWidth: 1
            }, {
              label: '<%-date%>'
            }]
          },
          options: {
            scales: {
              x: {
                beginAtZero: true
              },
              y: {
                min:0,
                max:1,
                ticks:{
                  stepSize:1
                }              }
            }
          }
        });
      });
    });

    document.getElementById("searchDateButton").addEventListener("click", async function (event) {
      const newDate = document.getElementById("searchDate").value;
      fetch(`http://localhost:3000/setDate?newDate=${newDate}`, {
        method: "GET",
        headers: {
          "Content-Type": "application/json",
        },
      })
        .then(response => response.json())
        .then(data => {
          console.log("Hulloo")
          console.log(data);
        })
        .catch(error => {
          console.log("Bubyee")

          console.error(error);
        });

    });

    const passwordInput = document.querySelector("#password")
    const eye = document.querySelector("#eye")
    eye.addEventListener("click", function () {
      this.classList.toggle("fa-eye-slash")
      const type = passwordInput.getAttribute("type") === "password" ? "text" : "password"
      passwordInput.setAttribute("type", type)
    });

  </script>
</body>

</html>