<!DOCTYPE html>
<html>

<head>
  <title>Dashboard</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    /* @import url('https://fonts.googleapis.com/css2?family=Oswald&display=swap'); */
    @import url('https://fonts.googleapis.com/css?family=Montserrat:400,800');

    body {
      background-color: rgb(214, 225, 234);
    }

    .navbar {
      width: 100%;
      background-color: #22196b;
      /* height: 80px; */
      overflow: auto;
    }

    /* Navbar links */
    .navbar a {
      float: left;
      text-align: center;
      padding: 20px;
      color: white;
      text-decoration: none;
      font-size: 23px;
      /* margin-top: 7px;
      margin-left: 12px; */
    }

    .navbar img {
      margin-top: 10px;
      margin-left: 12px;
      float: left;
      height: 50px;
      /* width: 140px; */
    }

    .navbar a:hover {
      background-color: red;
    }

    /* #Profile {
      float: right;
      margin-right: 23px;
    }

    #Profile button {
      background-color: rgb(30, 30, 132);
      color: white;
      font-size: 18px;
      padding: 6px;
      margin-top: 21px;
      border: 2px solid #e0e0e0;
    } */

    .upper {
      background-color: rgb(232, 238, 240);
      border-radius: 10px;
      box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25),
        0 10px 10px rgba(0, 0, 0, 0.22);
      position: relative;
      margin-top: 12px;
      overflow: hidden;
      min-height: 120px;
      max-height: 120px;
      padding: 10px;
    }

    .lower {
      background-color: rgb(232, 238, 240);
      border-radius: 10px;
      box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25),
        0 10px 10px rgba(0, 0, 0, 0.22);
      position: relative;
      overflow: auto;
      margin-top: 20px;
      min-height: 310px;
      padding: 10px;
      width: 500px;
      /* margin-right: 30px;  */
      margin-left: 65px;
    }

    .dropdown2 {
      float: right;
      margin-right: 30px;
    }


    .dropdown2 .dropbtn2 {
      font-size: 23px;
      border: none;
      outline: none;
      color: white;
      padding: 20px;
      background-color: inherit;
      font-family: inherit;
    }


    /* Add a red background color to navbar links on hover */

    .dropdown2:hover .dropbtn2 {
      background-color: red;
    }

    /* Dropdown content (hidden by default) */

    .dropdown-content2 {
      display: none;
      position: absolute;
      background-color: #f9f9f9;
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
      z-index: 1;
    }

    /* Links inside the dropdown */

    .dropdown-content2 a {
      float: none;
      color: black;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      text-align: left;
      font-size: larger;
    }

    /* Add a grey background color to dropdown links on hover */

    .dropdown-content2 a:hover {
      background-color: #ddd;
    }

    /* Show the dropdown menu on hover */

    .dropdown2:hover .dropdown-content2 {

      display: block;
    }


    .row {
      display: flex;
      flex-wrap: wrap;

    }

    #registration {
      font-family: Montserrat bold;
      border-collapse: collapse;
      overflow: hidden;
      width: 100%;
    }

    #registration td,
    #registration th {
      border: 2px solid #ddd;
      padding: 8px;
      overflow: auto;
    }

    #registration tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    #registration tr:hover {
      background-color: #ddd;
    }

    #registration th {
      padding-top: 12px;
      padding-bottom: 12px;
      text-align: left;
      background-color: #233789;
      color: white;
      font-size: 17px;
    }

    .upper h2 {
      text-align: center;
      color: black;
      margin-top: 3px;
      font-size: 30px;
    }

    #searchDateButton {
      padding: 8px;
      border: 2px solid #22196b;
      margin-top: 5px;
      /* margin-left: 577px; */
      font-size: 17px;
      background-color: #22196b;
      color: white;
      cursor: pointer;
    }

    #searchDate {
      border: 1.5px solid #22196b;
      padding: 7.8px;
      /* border: 2px solid rgb(225, 71, 71); */
      margin-top: 4px;
      margin-left: 520px;
      align-items: center;
      font-size: 15px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    #logout {
      font-size: 17px;
      background-color: #22196b;
      color: white;
      cursor: pointer;
    }
  </style>


</head>

<body>
  <div class="navbar">
    <img src="techAsia-LOGO_horizontal1028.png" alt="">
    <a href="http://localhost:3000/admin-dashboard"><i class="fa fa-fw fa-search"></i>Users Data</a>
    <a href="http://localhost:3000/admin-activity"><i class="fa fa-fw fa-calculator"></i>Activity</a>
    <a href="http://localhost:3000/register"><i class="fa fa-fw fa-users"></i>Add User</a>
    <div class="dropdown2">
      <button class="dropbtn2" id="activity2"><i class="fa fa-fw fa-user"></i> Admin
        <i class="fa fa-caret-down"></i>
      </button>
      <div class="dropdown-content2">
        <a href="http://localhost:3000/admin-profile">Admin Profile</a>
        <a href="#">
          <form id="Profile" action="/logout" method="GET" enctype="text/plain">
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button id="logout">Logout</button>
          </form>
        </a>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="upper">
      <h2>Search According To Date</h2>
      <div class="input-group">
        <input type="date" id="searchDate" placeholder="Date" />
        <button type="button" class="btn btn-primary" id="searchDateButton">
          <i class="fa fa-fw fa-search"></i>
        </button>
      </div>
    </div>
    <div class="row">
      <% users.forEach(function(mac) { %>
        <div class="lower">
          <canvas id="<%= mac.mac_id %>-chart" style="width: 50%; height: 50%;"
            data-chart-data='<%- JSON.stringify(data[users.indexOf(mac)]) %>'></canvas>
        </div>
        <% }); %>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var charts = document.querySelectorAll('canvas');
      charts.forEach(function (chart) {
        const chartData = JSON.parse(chart.getAttribute('data-chart-data'));
        const macId = chart.id.split('-')[0];
        var xValues = chartData.map(entry => entry.time);
        var yValues = chartData.map(entry => entry.on_off);

        new Chart(chart, {
          type: 'line',
          data: {
            labels: xValues,
            datasets: [{
              label: macId,
              data: yValues,
              backgroundColor: 'rgb(30, 30, 132)',
              borderColor: 'rgba(75, 192, 192, 1)',
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              x: {
                beginAtZero: true
              },
              y: {
                beginAtZero: true
              }
            }
          }
        });
      });
    });

    document.getElementById("searchDateButton").addEventListener("click", async function (event) {
      const newDate = document.getElementById("searchDate").value;
      fetch(`http://localhost:3000/setDate?newDate=${newDate}`, {
        method: "GET",
        headers: {
          "Content-Type": "application/json",
        },
      })
        .then(response => response.json())
        .then(data => {
          console.log("Hulloo")
          console.log(data);
        })
        .catch(error => {
          console.log("Bubyee")

          console.error(error);
        });

    });

    const passwordInput = document.querySelector("#password")
    const eye = document.querySelector("#eye")
    eye.addEventListener("click", function () {
      this.classList.toggle("fa-eye-slash")
      const type = passwordInput.getAttribute("type") === "password" ? "text" : "password"
      passwordInput.setAttribute("type", type)
    });

  </script>
</body>
</html>